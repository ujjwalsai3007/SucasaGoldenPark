<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecurityGuardScreen"
    android:background="@drawable/background_gradient">

    <!-- Title for Security Guard Availability -->
    <TextView
        android:id="@+id/availabilityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Security Guard Availability"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Switch for Security Guard Availability -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/availabilitySwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/availabilityText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Available" />

    <!-- Title for Apartment Cleaning -->
    <TextView
        android:id="@+id/availabilityText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/availabilitySwitch"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="Apartment Cleaned"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Switch for Apartment Cleaning -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/availabilitySwitch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/availabilityText1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Cleaned" />

    <!-- Buttons Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/availabilitySwitch1"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Button for Adding Orders -->
        <Button
            android:id="@+id/addOrderButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/black"
            android:text="Add Orders"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <!-- Button for Raising Issues -->
        <Button
            android:id="@+id/raiseIssueButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/black"
            android:text="Raise Issues"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <!-- Button for Viewing Issues -->
        <Button
            android:id="@+id/viewIssuesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/black"
            android:text="View Issues"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <!-- Button for Viewing Events -->
        <Button
            android:id="@+id/viewEventsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="View Events"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <!-- Button for Updating Maintenance -->
        <Button
            android:id="@+id/updateMaintenanceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Maintenance"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Button for Logout -->
        <Button
            android:id="@+id/logoutOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:backgroundTint="#F44336"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:drawableStart="@android:drawable/ic_lock_power_off"
            android:drawablePadding="8dp"
            android:padding="12dp" />
    </LinearLayout>
</RelativeLayout>